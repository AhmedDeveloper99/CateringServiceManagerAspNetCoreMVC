@model CateringServiceManagerAspNetCoreMVC.Models.Daig

<h1>Delete Daig</h1>

<h3>Are you sure you want to delete this Daig?</h3>
<div>
    <h4>@Model.Name</h4>
    <p style="font-size: 20px; font-weight: bold;">Status: @Model.Status</p>
</div>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="DaigId" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

